<ul class="maintabmenu multipletabmenu">
    <li class="current"><a href="#">Chat topics</a></li>
</ul><!--maintabmenu-->

<div class="content">
    <div class="contenttitle radiusbottom0">
        <h2 class="image"><span>Chat topics</span></h2>
    </div><!--contenttitle-->

    <input type="hidden" name="csrf" id="csrf" value="{echo $token}" />
    <table cellpadding="0" cellspacing="0" border="0" class="stdtable">
        <colgroup>
            <col class="con1" />
            <col class="con0" /> <col class="con1" />
            <col class="con0" /> <col class="con1" />
        </colgroup>
        <thead>
            <tr>
                <td class="head1">Title</td>
                <td class="head0">Created by</td>
                <td class="head1">Created</td>
                <td class="head0">Status</td>
                <td class="head1">&nbsp;</td>
            </tr>
        </thead>
        <tbody>
            {if !empty($topics)}
                {foreach $topic in $topics}
                    <tr>
                        <td>{echo $topic->getTitle()}</td>
                        <td>{echo $topic->firstname." ".$topic->lastname}</td>
                        <td>{echo $topic->getCreated()}</td>
                        <td>
                            {if $topic->status == 1}<span class="labelProduct labelProductGreen">Active</span>{/if}
                            {else}<span class="labelProduct labelProductRed">Waiting to approve</span>{/else}
                        </td>
                        <td>
                            {if $topic->status == 0}
                                <a href="/admin/chat/approve/{echo $topic->getId()}" class="btn btn3 btn_chat ajaxReload" title="Approve"></a>
                            {/if}
                            <a href="/admin/chat/delete/{echo $topic->getId()}" class="btn btn3 btn_trash ajaxDelete" title="Delete"></a>
                        </td>
                    </tr>
                {/foreach}
            {/if}
        </tbody>
    </table>
</div>